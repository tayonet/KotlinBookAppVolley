<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:orientation="vertical"
    android:layout_margin="4dp"
    android:background="#ffffff"
    android:layout_height="200dp">

    <LinearLayout
        android:id="@+id/favContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="11.2"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/favBookImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:background="#f5f5f5"
            android:scaleType="fitCenter"
            android:src="@drawable/default_book_cover" />
        <TextView
            android:id="@+id/favBookTitle"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:padding="2dp"
            android:paddingBottom="2dp"
            android:textSize="20sp"
            android:text="How to become obscenely rich"
            android:textColor="@color/black"
            android:layout_weight="1.7" />
        <TextView
            android:id="@+id/favBookAuthor"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#333"
            android:padding="2dp"
            android:text="Elon Musk"
            android:layout_weight="1.5" />
        <TextView
            android:id="@+id/favBookPrice"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:text="$49.99"
            android:textSize="18sp"
            android:padding="2dp"
            android:textColor="#00423B"
            android:textAlignment="center"
            android:layout_weight="1.5" />


        <TextView
            android:id="@+id/favBookRating"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textStyle="bold"
            android:padding="2dp"
            android:drawableLeft= "@drawable/ic_likes"
           android:paddingLeft="0dp"
            android:text="4.3"
            android:textSize="18sp"
            android:textAlignment="center"
            android:textColor="#FF9800"
            android:layout_weight="1.3" />


    </LinearLayout>



</androidx.cardview.widget.CardView>